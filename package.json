{
  "name": "decentralizedtradedesk",
  "version": "0.0.14",
  "private": true,
  "description": "A decentralized trade desk application",
  "homepage": "https://github.com/ArcMichael/decentralizedtradedesk#readme",
  "bugs": {
    "url": "https://github.com/ArcMichael/decentralizedtradedesk/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ArcMichael/decentralizedtradedesk.git"
  },
  "license": "BSD-2-Clause",
  "author": "ArcMichael <hulen20@gmail.com>",
  "type": "module",
  "scripts": {
    "add": "git add .",
    "build": "tsc && vite build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "commit": "cz",
    "dev": "vite",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "preview": "vite preview",
    "push": "git push",
    "release": "standard-version && git push origin main && git push origin main --tags",
    "release-rust": "node auto-increment-rust-version.cjs",
    "tauri": "tauri",
    "tauri-build": "tauri build",
    "test": "jest",
    "tree": "tree -l 4 -o tree.txt --ignore node_modules/",
    "truffle-compile": "cd truffle && truffle compile --config ./truffle-config.ts",
    "truffle-migrate": "cd truffle && truffle migrate --network development --resrt --config ./truffle-config.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "resolutions": {
    "punycode": "^2.3.1"
  },
  "dependencies": {
    "@ant-design/icons": "^5.3.7",
    "@tauri-apps/api": "2.0.0-beta.13",
    "@tauri-apps/plugin-shell": "2.0.0-beta.6",
    "antd": "^5.18.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "web3": "^4.10.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/core": "^19.3.0",
    "@tauri-apps/cli": "2.0.0-beta.20",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "babel-jest": "^29.7.0",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-react": "^7.34.3",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "internal-ip": "^7.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "react-intl": "^6.6.8",
    "react-router-dom": "^6.24.0",
    "standard-version": "^9.5.0",
    "tree-cli": "^0.6.7",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "uuid": "^10.0.0",
    "vite": "^5.3.2"
  },
  "engines": {
    "node": "18.20.3"
  }
}
